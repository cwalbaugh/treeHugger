extends layout
include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1= pageHeader.title
          small &nbsp;#{pageHeader.strapline}
  .row
    .col-12.col-md-8
        each tree in trees
            .card
                .card-block
                    h4
                        a(href="/tree")= tree.name
                        +outputRating(tree.rating)
                    span.badge.badge-pill.badge-default.float-right= tree.distance
                p.address= tree.address
                .specieses
                    each species in tree.specieses
                        span.badge.badge-warning= species
  .row
    .col-12.col-md-4
      p.lead= sidebar
